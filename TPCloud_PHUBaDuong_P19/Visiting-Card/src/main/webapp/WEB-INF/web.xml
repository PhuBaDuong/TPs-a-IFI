<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>ifi.phubaduong.p19.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>ifi.phubaduong.p19.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>account_registration</servlet-name>
		<servlet-class>ifi.phubaduong.p19.AccountRegistrationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>visiting_card_creation</servlet-name>
		<servlet-class>ifi.phubaduong.p19.VisitingCardCreationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>card_deletion</servlet-name>
		<servlet-class>ifi.phubaduong.p19.CardDeletion</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>card_searching</servlet-name>
		<servlet-class>ifi.phubaduong.p19.CardSearchingServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>friend_searching</servlet-name>
		<servlet-class>ifi.phubaduong.p19.FriendSearchingServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>friend_invitation</servlet-name>
		<servlet-class>ifi.phubaduong.p19.FriendInvitationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>accepter_la_demande</servlet-name>
		<servlet-class>ifi.phubaduong.p19.FriendAcceptionServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>account/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>account/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>account_registration</servlet-name>
		<url-pattern>account/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>visiting_card_creation</servlet-name>
		<url-pattern>card/opening_visiting_card</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>card_deletion</servlet-name>
		<url-pattern>card/card_deletion</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>card_searching</servlet-name>
		<url-pattern>card/card_searching</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>friend_searching</servlet-name>
		<url-pattern>account/friend_searching</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>friend_invitation</servlet-name>
		<url-pattern>account/friend_invitation</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>accepter_la_demande</servlet-name>
		<url-pattern>account/accepter_la_demande</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>home.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>ifi.phubaduong.p19.OfyHelper</listener-class>
	</listener>
</web-app>
